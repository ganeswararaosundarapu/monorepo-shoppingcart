{
  "name": "@shoppingcart/ui",
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "echo": "echo \"I'm echo from shoppingcart ui\"",
    "clean:build": "rimraf build",
    "start": "yarn node build/shoppingcart-server.min.js",
    "build": "yarn clean:build && yarn build:server && yarn build:dev",
    "build:server": "webpack --config webpack.server.js",
    "build:dev": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "build:watch": "yarn build:server && yarn build:dev --watch",
    "dev": "run-p build:watch start",
    "lint": "eslint src --ext='.js,.jsx,.ts,.tsx'",
    "lint:fix": "eslint src --ext='.js,.jsx,.ts,.tsx' --fix",
    "generate-messages:all": "yarn extract-messages && yarn manage-translations",
    "generate-messages:en": "yarn extract-messages && yarn manage-translations -l en",
    "extract-messages": "formatjs extract 'src/**/*.{ts,tsx,js,jsx}' --format extractMsgsFormat.js --out-file public/locales/extracted/all-i18n-msgs.json --flatten --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "manage-translations": "node ./translationRunner.js"
  },
  "dependencies": {
    "@formatjs/intl-datetimeformat": "^6.2.0",
    "@formatjs/intl-getcanonicallocales": "^2.0.4",
    "@formatjs/intl-locale": "^3.0.6",
    "@formatjs/intl-numberformat": "^8.1.3",
    "@formatjs/intl-pluralrules": "^5.1.3",
    "express": "^4.18.1",
    "express-handlebars": "^6.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@formatjs/cli": "^5.1.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/eslint": "^8",
    "@types/express": "^4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/rimraf": "^3",
    "@types/yargs": "^17",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.23.0",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "mini-css-extract-plugin": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "react-intl-translations-manager": "^5.0.3",
    "rimraf": "^3.0.2",
    "sass": "^1.54.8",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0",
    "yargs": "^17.5.1"
  }
}
